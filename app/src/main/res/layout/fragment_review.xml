<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_image"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="10">

    <LinearLayout
        android:id="@+id/layout_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_review"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:weightSum="9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:padding="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_word_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/draw_01"
                android:fontFamily="@font/jsdongkang_regular"
                android:padding="10dp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="28dp" />

            <Button
                android:id="@+id/btn_word_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/draw_02"
                android:fontFamily="@font/jsdongkang_regular"
                android:padding="10dp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="28dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_word_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/draw_02"
                android:fontFamily="@font/jsdongkang_regular"
                android:padding="10dp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="28dp" />

            <Button
                android:id="@+id/btn_word_4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:background="@drawable/draw_01"
                android:fontFamily="@font/jsdongkang_regular"
                android:padding="10dp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="28dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>